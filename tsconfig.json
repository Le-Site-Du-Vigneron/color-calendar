{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ES2020",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowUmdGlobalAccess": true,
    "removeComments": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["node_modules", "dist"],
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Recommended"
}